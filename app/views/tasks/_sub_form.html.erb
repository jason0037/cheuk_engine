<%= form_for @role_user, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :role_id, :class => 'control-label' %>
    <div class="controls">
      <%=@role.name%>
      <%= f.text_field :role_id,:value=>@role.id, :class => 'text_field hidden' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :username, :class => 'control-label' %>
    <div class="controls">
    <%=f.select :username,User.all.collect{|p| [p.username,p.username] },{:include_blank=>"请选择"},{:id=>"city" }%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                roles_path, :class => 'btn' %>
  </div>
<% end %>
